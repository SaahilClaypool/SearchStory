@implements IDisposable
@code {
    [CascadingParameter]
    public virtual StateContainer State { get; set; }
    protected override Task OnInitializedAsync()
    {
        if (State != null)
        {
            State.OnChange += StateHasChanged;
        }
        return Task.CompletedTask;
    }

    public void Dispose()
    {
        if (State != null)
        {
            State.OnChange -= StateHasChanged;
        }
    }
}