@inherits ReactiveComponent

@if(State.Value.PreviewHref is string href)
{
    <div class="flex flex-col flex-grow container mx-auto bg-white rounded-tl-xl border-l shadow-2xl overflow-y-auto flex-grow-0 ml-2">
        <div class="flex bg-gray-100 justify-between items-center flex-none p-4">
            <a class="underline flex-none" href=@State.Value.OriginalHref target="_blank">
                (open in new tab)
            </a>
            <button @onclick="Close" class="bg-red-300 rounded-full">
                @* X button *@
                <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>

        <div class="px-4 flex-auto flex">
            <iframe class="flex-auto" src=@href/>
        </div>
    </div>
}

@code {
    void Close() => State.Update(() => 
    {
        State.Value.PreviewHref = null;
        State.Value.OriginalHref = null;
    });
}